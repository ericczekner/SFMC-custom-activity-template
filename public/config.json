{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/sms.png",
        "category": "message"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "REST Activity (Workflow API v1.1)",
            "description": "An example REST activity using workflow API v1.1 format."
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "emailAddress": "{{InteractionDefaults.Email}}"
                },
                {
                    "phoneNumber": "{{Contact.Default.PhoneNumber}}"
                }
            ],
            "outArguments": [
                {
                    "foundSignupDate": ""
                }
            ],
            "url": "https://custom-jb-activity-ec.herokuapp.com/journeybuilder/execute"
        }
    },
    "configurationArguments": {
        "applicationExtensionKey": "931aa261-bdee-4c0d-b656-b2ba88210f93",
        "save": {
            "url": "https://custom-jb-activity-ec.herokuapp.com/journeybuilder/save",
            "verb": "POST",
            "useJwt": true
        },
        "publish": {
            "url": "https://custom-jb-activity-ec.herokuapp.com/journeybuilder/publish",
            "verb": "POST",
            "useJwt": true
        },
        "stop": {
            "url": "https://custom-jb-activity-ec.herokuapp.com/journeybuilder/stop",
            "verb": "POST",
            "useJwt": true
        },
        "validate": {
            "url": "https://custom-jb-activity-ec.herokuapp.com/journeybuilder/validate",
            "verb": "POST",
            "useJwt": true
        }
    },
    "wizardSteps": [
        { "label": "Step 1", "key": "step1" },
        { "label": "Step 2", "key": "step2" },
        { "label": "Step 3", "key": "step3" },
        { "label": "Step 4", "key": "step4", "active": false }
      ],
    "userInterfaces": {
        "configModal": {
            "height": 700,
            "width": 1000,
            "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
          "execute": {
            "inArguments": [
              {
                "phoneNumber": {
                  "dataType": "Phone",
                  "isNullable": false,
                  "direction": "in"
                }
              },
              {
                "emailAddress": {
                  "dataType": "Email",
                  "isNullable": false,
                  "direction": "in"
                }
              }
            ],
            "outArguments": [
              {
                "foundSignupDate": {
                  "dataType": "Date",
                  "direction": "out",
                  "access": "visible"
                }
              }
            ]
          }
        }
      }
    }